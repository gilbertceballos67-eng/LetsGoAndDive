@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold mb-2 text-primary">Manage Your Account</h1>
        <p class="text-muted">Update your profile, password, and security settings all in one place.</p>
    </div>

    <div class="row g-4">
        <!-- Sidebar Navigation -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 manage-sidebar">
                <div class="card-body p-3">
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card shadow-sm border-0 rounded-3 manage-content">
                <div class="card-body p-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
