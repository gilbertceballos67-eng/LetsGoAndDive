@model IEnumerable<Order>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "All Orders";
}

<!--
<a asp-action="CleanupOldOrders" asp-controller="UserOrder" class="btn btn-danger mb-3">
    <i class="bi bi-trash"></i> Clean Old Orders (30+ Days)
</a>
-->
@if (TempData["msg"] != null)
{
    <div class="alert alert-info mt-3">@TempData["msg"]</div>
}


<div class="container mt-4">
    <h2>Orders</h2>
    <table class="table table-striped table-bordered align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Order Date</th>
                <th>Customer Name</th>
                <th>Email</th>
                <th>Mobile No</th>
                <th>Address</th>
                <th>Payment Method</th>
                <th>GCash Reference</th>
                <th>Payment Status</th>
                <th>Order Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.CreateDate.ToString("dd-MM-yyyy")</td>
                        <td>@order.Name</td>
                        <td>@order.Email</td>
                        <td>@order.MobileNumber</td>
                        <td>@order.Address</td>
                        <td>@order.PaymentMethod </td>
                        <td>
                            @if (order.PaymentMethod == "GCash")
                            {
                                if (!string.IsNullOrEmpty(order.GCashReferenceNumber))
                                {
                                    @order.GCashReferenceNumber
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>
                        <td>
                                @if (order.IsPaid)
                                {
                                <span class="badge bg-success">Paid</span>
                                }
                                else
                                {
                                <span class="badge bg-warning text-dark">Unpaid</span>
                                }
                        </td>
                        <td>@order.OrderStatus.StatusName</td>
                        <td>
                            <a href="/Order/OrderDetail?orderId=@order.Id" data-bs-toggle="modal" data-bs-target="#modal-@order.Id" class="btn btn-sm btn-dark mb-1">Order Detail</a><br />
                            <a href="/AdminOperations/UpdateOrderStatus?orderId=@order.Id" class="btn btn-sm btn-primary mb-1">
                                Change Order Status
                            </a>

                            <form asp-controller="AdminOperations" asp-action="TogglePaymentStatus" method="post" style="display:inline;">
                                <input type="hidden" name="orderId" value="@order.Id" />
                                <button type="submit" class="btn btn-sm btn-info text-white">
                                    Toggle Payment Status
                                </button>
                            </form>
                            @if (!string.IsNullOrEmpty(order.ProofOfPaymentImagePath))
                            {
                                <a href="@order.ProofOfPaymentImagePath" target="_blank" class="btn btn-sm btn-warning mt-1">Proof of Payment</a>
                            }
                            <form asp-action="ArchiveOrder" asp-controller="AdminOperations" asp-route-orderId="@order.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-warning mt-1"
                                onclick="return confirm('Archive this order? It will not be deleted.');">
                                    Archive
                                </button>
                            </form>


                            @await Html.PartialAsync("/Views/AdminOperations/_OrderDetailModal.cshtml",
                    new OrderDetailModalDTO { DivId = order.Id.ToString(), OrderDetail = order.OrderDetail })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center">No orders found.</td>
                </tr>
            }
        </tbody>


        @if (ViewBag.TotalPages > 1)
        {
            <nav class="d-flex justify-content-center mt-3">
                <ul class="pagination">
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="AllOrders" asp-route-page="1">«</a>
                    </li>
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="AllOrders" asp-route-page="@(ViewBag.CurrentPage - 1)">‹</a>
                    </li>

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="AllOrders" asp-route-page="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="AllOrders" asp-route-page="@(ViewBag.CurrentPage + 1)">›</a>
                    </li>
                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="AllOrders" asp-route-page="@ViewBag.TotalPages">»</a>
                    </li>

                </ul>
            </nav>
        }

    </table>
</div>
