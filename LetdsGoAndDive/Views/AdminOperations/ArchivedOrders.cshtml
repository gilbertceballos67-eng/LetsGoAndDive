@model IEnumerable<Order>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Archived Orders";
}

<h2 class="mt-3">Archived Orders</h2>

<table class="table table-bordered table-striped text-center mt-3">
    <thead class="table-dark">
        <tr>
            <th>Order Date</th>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Address</th>
            <th>Payment</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var order in Model)
            {
                <tr>
                    <td>@order.CreateDate.ToString("MM-dd-yyyy")</td>
                    <td>@order.Name</td>
                    <td>@order.Email</td>
                    <td>@order.MobileNumber</td>
                    <td>@order.Address</td>
                    <td>@order.PaymentMethod</td>
                    <td>@order.OrderStatus.StatusName</td>
                    <td>
                        <form asp-action="UnarchiveOrder" asp-controller="AdminOperations" method="post">
                            <input type="hidden" name="orderId" value="@order.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                Restore
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8">No archived orders found.</td>
            </tr>
        }
    </tbody>
</table>
