@model ProductDTO
@{

    Layout = "_AdminLayout";
}
<div style="width:50%">
    <h2>Add Product</h2>
    <a asp-action="Index" asp-controller="Product" class="btn btn-primary">Back</a>

    <form asp-action="AddProduct" enctype="multipart/form-data">
        @* <input type="hidden" asp-for="Id" /> *@

        <div class="my-2">
            <label>Product Name*</label>
            <input type="text" class="form-control" asp-for="ProductName" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Item Type*</label>
            <select class="form-control" asp-for="ItemTypeID" asp-items="Model.ItemTypeList">
                <option value="">Select Item Type</option>
            </select>
            <span asp-validation-for="ItemTypeID" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter product description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>


        <div class="my-2">
            <label>Price*</label>
            <input type="number" class="form-control" asp-for="Price" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Image</label>
            <input type="file" class="form-control" asp-for="ImageFile" />
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-info">Add</button>
        </div>
    </form>
</div>
