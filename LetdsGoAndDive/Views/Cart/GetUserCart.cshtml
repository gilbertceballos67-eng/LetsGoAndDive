@model Shoppingcart
@{
    ViewData["Title"] = "GetUserCart";
}

<div style="width: 90%;margin:auto" class="mt-2">
    @if (Model != null && Model.CartDetails != null && Model.CartDetails.Count > 0)
    {
        <h3>My Cart</h3>

        <table class="table table-striped">
            <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Item Type</th>
                <th>Unit Price</th>
                <th>Qty</th>
                <th>Total Price</th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model.CartDetails)
            {
                <tr>
                    <td>@(item.Product?.ProductName ?? "N/A")</td> <!-- Use ProductName instead of ItemName -->
                    <td>
                        @if (string.IsNullOrEmpty(item.Product?.Image))
                        {
                            <img src="~/images/No_Image_Available.jpg" style="width:80px;height:100px" />
                        }
                        else
                        {
                            <img src="~/images/@item.Product.Image" asp-append-version="true" style="width:80px;height:100px" />
                        }
                    </td>
                    <td>@(item.Product?.ItemType?.ItemTypeName ?? "N/A")</td>
                    <td>@(item.Product?.Price ?? 0)</td>
                    <td>@item.Quanntity</td>
                    <td>@((item.Product?.Price ?? 0) * item.Quanntity)</td>
                    <td>
                        @if (item.Product != null)
                        {
                            <a class="btn btn-info" asp-controller="Cart" asp-action="AddItem" asp-route-productId="@item.ProductId">+</a>
                            <a class="btn btn-info" asp-controller="Cart" asp-action="RemoveItem" asp-route-productId="@item.ProductId">-</a>
                        }
                    </td>
                </tr>
            }
        </table>

        <div class="my-2">
            <h5>Total(INR):</h5> @(Model.CartDetails.Where(item => item.Product != null).Select(item => (item.Product.Price * item.Quanntity)).Sum())
        </div>

        <div class="my-2">
            <a class="btn btn-primary" asp-controller="Cart" asp-action="CheckOut">Checkout</a>
        </div>
    }
    else
    {
        <h5>Cart is Empty</h5>
    }
</div>