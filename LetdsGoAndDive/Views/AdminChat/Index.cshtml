@model IEnumerable<string>

<h2>Admin Inbox</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>User</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user</td>
                <td>
                    <a asp-action="Chat" asp-route-user="@user" class="btn btn-primary btn-sm">Open Chat</a>

                    <form asp-action="DeleteConversation" asp-route-user="@user" method="post" class="d-inline"
                      onsubmit="return confirm('Are you sure you want to delete this conversation?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
