@model LetdsGoAndDive.Models.ApplicationUser
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Add User";
}

<h2 class="mb-4">Add New User</h2>

<form asp-action="AddUser" method="post" class="card shadow p-4">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
        <input asp-for="FullName" class="form-control" placeholder="Enter user's full name" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label fw-bold">Email</label>
        <input asp-for="Email" class="form-control" placeholder="Enter user's email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MobileNumber" class="form-label fw-bold">Mobile Number</label>
        <input asp-for="MobileNumber" class="form-control" placeholder="Enter user's mobile number" />
        <span asp-validation-for="MobileNumber" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Address" class="form-label fw-bold">Address</label>
        <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter user's address"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Enter a password" required />
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="ManageUsers" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
        <button type="submit" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Add User
        </button>
    </div>
</form>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" crossorigin="anonymous"></script>
