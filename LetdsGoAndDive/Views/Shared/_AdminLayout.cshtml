@* Views/Shared/AdminLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LetsGoAndDive - Admin Dashboard</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/AdminLayout.css" asp-append-version="true" />
</head>

<body>
    <div class="main-container d-flex">
        <!-- Sidebar -->
        <div class="sidenav flex-shrink-0">
            <ul class="nav flex-column">

                <li class="nav-item">
                    <a class="nav-link navigation-link" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i> Home
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link navigation-link" asp-controller="Admin" asp-action="ManageUsers">
                        <i class="bi bi-people-fill"></i> Manage Users
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link navigation-link" asp-controller="AdminOperations" asp-action="AllOrders">
                        <i class="bi bi-receipt"></i> Orders
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link navigation-link" asp-controller="Stock" asp-action="Index">
                        <i class="bi bi-archive"></i> Stock
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link navigation-link" asp-controller="ItemType" asp-action="Index">
                        <i class="bi bi-tags"></i> Item Types
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link navigation-link" asp-controller="Product" asp-action="Index">
                        <i class="bi bi-box"></i> Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="SalesReport" asp-action="Index">
                        📊 Sales Reports
                    </a>
                </li>


        </div>

        <!-- Right Panel -->
        <div class="right-panel flex-grow-1 d-flex flex-column">
            <!-- Top Navbar -->
            <nav class="nav-bar d-flex justify-content-between align-items-center px-4">
                <div class="nav-heading">Welcome, @User.Identity?.Name</div>
                <div class="nav-actions">
                    
                    <form asp-area="Identity"
                          asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                          method="post"
                          class="d-inline">
                        <button type="submit" class="navigation-link btn btn-link p-0">
                            <i class="bi bi-box-arrow-left"></i> Logout
                        </button>
                    </form>
                </div>
            </nav>

            <!-- Page Content -->
            <main class="content flex-grow-1 p-4">
                <partial name="_Notifications" />
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)


    <!--  SignalR Admin New Order Alert -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/adminNotificationHub")
            .build();

        connection.on("ReceiveNewOrderAlert", function (message) {
          
            const toast = document.createElement("div");
            toast.textContent = message;
            toast.style.position = "fixed";
            toast.style.bottom = "20px";
            toast.style.right = "20px";
            toast.style.background = "#007bff";
            toast.style.color = "white";
            toast.style.padding = "12px 20px";
            toast.style.borderRadius = "10px";
            toast.style.boxShadow = "0 4px 8px rgba(0,0,0,0.3)";
            toast.style.fontSize = "16px";
            toast.style.fontWeight = "500";
            toast.style.zIndex = "9999";
            document.body.appendChild(toast);

            setTimeout(() => toast.remove(), 5000);
        });

        connection.start().catch(err => console.error(err.toString()));
    </script>

</body>
</html>
