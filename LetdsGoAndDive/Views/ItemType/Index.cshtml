@model IEnumerable<LetdsGoAndDive.Models.ItemType>
@{
    Layout = "_AdminLayout";
}

<h2>Item</h2>

<a asp-action="AddItemType" asp-controller="ItemType" class="btn btn-primary">Add New Item Type</a>

<table class="table table-striped my-2">
    <thead>
        <tr>
            <th>Item Type Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var itemType in Model)
        {
            <tr>
                <td>@itemType.ItemTypeName</td>
                <td>
                    <a asp-action="UpdateItemType"
                   asp-controller="ItemType"
                   asp-route-id="@itemType.Id"
                   class="btn btn-success btn-sm">
                        Edit
                    </a>
                    <a asp-action="DeleteItemType"
                   asp-controller="ItemType"
                   asp-route-id="@itemType.Id"
                   class="btn btn-danger btn-sm"
                   onclick="return confirm('Are you sure you want to delete this item type?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>No Item Types found.</p>
}
