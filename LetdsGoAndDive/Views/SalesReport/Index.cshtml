@model IEnumerable<LetdsGoAndDive.Models.Order>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Sales Report Dashboard";
}

<h2 class="text-center mb-4">📊 Sales Report Dashboard</h2>

<div class="mb-3">
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["success"]</div>
    }
    @if (TempData["info"] != null)
    {
        <div class="alert alert-info text-center">@TempData["info"]</div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["error"]</div>
    }
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <form asp-action="Index" method="get" class="d-flex">
        <select name="month" class="form-control">
            <option value="">Select Month</option>
            @foreach (var month in ViewBag.Months)
            {
                <option value="@month.Value" selected="@(month.Value == ViewBag.Month ? "selected" : null)">
                    @month.Text
                </option>
            }
        </select>
        <select name="year" class="form-control">
            <option value="">Select Year</option>
            @foreach (var year in ViewBag.Years)
            {
                <option value="@year" selected="@(year == ViewBag.Year ? "selected" : null)">
                    @year
                </option>
            }
        </select>
        <button type="submit" class="btn btn-primary">📅 Filter</button>
    </form>

    <div>
        <form asp-action="ResetSales" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to reset sales for this period? This cannot be undone.');">
            <input type="hidden" name="month" value="@ViewBag.Month" />
            <input type="hidden" name="year" value="@ViewBag.Year" />
            <button type="submit" class="btn btn-warning">🔁 Reset Sales</button>
        </form>

        <a asp-action="ExportToPdf" asp-route-month="@ViewBag.Month" asp-route-year="@ViewBag.Year" class="btn btn-danger">🖨 Export PDF</a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Date</th>
            <th>Customer</th>
            <th>Status</th>
            <th>Payment Method</th>
            <th>Total (₱)</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="5" class="text-center">No sales found for this period.</td></tr>
        }
        else
        {
            @foreach (var order in Model)
            {
                var total = order.OrderDetail?.Sum(d => d.Quantity * d.UnitPrice) ?? 0;
                <tr>
                    <td>@order.CreateDate.ToLocalTime().ToString("MM/dd/yyyy")</td>
                    <td>@order.Name</td>
                    <td>@order.OrderStatus?.StatusName</td>
                    <td>@order.PaymentMethod</td>
                    <td>₱@total.ToString("F2")</td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="text-end fw-bold fs-5 mt-3">
    Total Sales: ₱@ViewBag.TotalSales.ToString("F2")
</div>
